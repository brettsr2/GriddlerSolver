<Window x:Class="Griddler_Solver.Windows.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Griddler_Solver.Windows"
        mc:Ignorable="d"
        Title="Solver Progress" Height="450" Width="800" Icon="/app.ico" Closed="Window_Closed">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="auto" />
    </Grid.RowDefinitions>
    <TextBox x:Name="textBoxOutput" Grid.Row="0" VerticalScrollBarVisibility="Auto" FontFamily="Courier New"></TextBox>
    <Button x:Name="buttonCancel" Grid.Row="1" MinHeight="32" Margin="4" Click="OnButtonCancel_Click">Cancel</Button>
  </Grid>
</Window>
