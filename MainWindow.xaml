<Window x:Class="Griddler_Solver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Griddler_Solver"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Content="Url:" />
        <TextBox x:Name="textBlockUrl" Grid.Column="1" MinHeight="26" VerticalAlignment="Center" VerticalContentAlignment="Center">https://www.griddlers.net/cs_CZ/nonogram/-/g/183521</TextBox>
        <Button Grid.Column="2" MinWidth="100" Content="Go" Click="OnButtonGo_Click"></Button>
      </Grid>
    </StackPanel>
    <Canvas x:Name="canvas" Grid.Row="1" />
    <Button x:Name="solve" Grid.Row="3" MinHeight="26" Content="Solve" Click="OnSolve_Click" />
  </Grid>
</Window>
